@model Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3 row p-1">
                <label class="p-0">Product Title</label>
                <input asp-for="Title" disabled type="text" class="form-control" />
            </div>
            <div class="mb-3 row p-1">
                <label class="p-0">Description</label>
                <input asp-for="Description" disabled type="text" class="form-control" />
            </div>
            <div class="mb-3 row p-1">
                <label class="p-0">Author</label>
                <input asp-for="Author" disabled type="text" class="form-control" />
            </div>
            <div class="mb-3 row p-1">
                <label class="p-0">ISBN</label>
                <input asp-for="ISBN" disabled type="text" class="form-control" />
            </div>
            <div class="mb-3 row p-1">
                <label class="p-0">Publication Date</label>
                <input asp-for="PublicationDate" disabled type="date" class="form-control" />
            </div>
            <div class="mb-3 row p-1">
                <label class="p-0">Price</label>
                <input asp-for="Price" disabled type="number" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn mt-3 btn-danger" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Modern Bookstore</title>
    <link rel="stylesheet" href="styles.css" />
</head>
<body>
    <section class="hero">
        <div class="hero-text">
            <h1>Discover Your Next Favorite Book</h1>
            <p>From timeless classics to today's bestsellers – your story starts here.</p>
            <a href="#shop">Shop Now</a>
        </div>
        <div class="hero-image">
            <img src="~/images/home-library-703jd3f0ft099r57.jpg" alt="Books on white background">
        </div>
    </section>

    <section class="categories">
        <h2>Shop by Category</h2>
        <div class="category-grid">
            <div class="category">
                <img src="https://source.unsplash.com/400x300/?fiction-books" alt="Fiction" />
                <h3>Fiction</h3>
            </div>
            <div class="category">
                <img src="https://source.unsplash.com/400x300/?non-fiction-books" alt="Non-Fiction" />
                <h3>Non-Fiction</h3>
            </div>
            <div class="category">
                <img src="https://source.unsplash.com/400x300/?fantasy-books" alt="Fantasy" />
                <h3>Fantasy</h3>
            </div>
            <div class="category">
                <img src="https://source.unsplash.com/400x300/?children-books" alt="Children" />
                <h3>Children</h3>
            </div>
        </div>
    </section>

    <section class="featured">
        <h2>Featured Books</h2>
        <div class="book-grid">
            <div class="book">
                <img src="https://source.unsplash.com/200x300/?book,cover" alt="Book 1" />
                <h4>The Hidden Garden</h4>
                <p>$14.99</p>
            </div>
            <div class="book">
                <img src="https://source.unsplash.com/200x300/?book,novel" alt="Book 2" />
                <h4>Rise of Legends</h4>
                <p>$18.99</p>
            </div>
            <div class="book">
                <img src="https://source.unsplash.com/200x300/?book,history" alt="Book 3" />
                <h4>Moments in Time</h4>
                <p>$12.50</p>
            </div>
        </div>
    </section>
</body>
</html>
